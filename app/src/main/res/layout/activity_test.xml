<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
>

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/edit_text"
            app:layout_constraintTop_toTopOf="parent"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="ニックネーム"
            app:value="テストさん"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/below_divider"
    />

    <View
            android:id="@+id/below_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text"
            app:layout_constraintBottom_toTopOf="@id/edit_text2"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="座右の銘"
            app:value="我輩は猫である"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/below_divider"
            app:layout_constraintBottom_toTopOf="@id/below_divider2"
    />

    <View
            android:id="@+id/below_divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text2"
            app:layout_constraintBottom_toTopOf="@id/edit_text3"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="今日の一言"
            app:value="元気があるのが一番!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/below_divider2"
            app:layout_constraintBottom_toTopOf="@id/below_divider3"
    />

    <View
            android:id="@+id/below_divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text3"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>